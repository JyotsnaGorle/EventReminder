        android:text="Add editable event"
        android:id="@+id/button2"
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="insertEvent"/>
    <TextView android:text="NO Permissions required - User can edit the event in the journey flow" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/button2"
        android:id="@+id/text2"/>


    <Button
        android:text="Add event in background"
        android:id="@+id/button3"
        android:layout_below="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addNewEvent"/>
    <TextView android:text="Calender Permissions required event added in background. It will ask permissions when running for once" android:layout_width="wrap_content"
